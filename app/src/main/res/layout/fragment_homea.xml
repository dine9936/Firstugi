<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_marginBottom="?attr/actionBarSize"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.firstugi.homea">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar_hom"
        android:elevation="2dp"
        android:background="#ffffff"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:border_width="1dp"
                app:border_color="@color/colorPrimary"
                android:src="@drawable/logo"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UCER"
                    android:gravity="left"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Allahabad"
                    android:textColor="@color/colorPrimary"
                    android:gravity="left"
                    />
            </LinearLayout>

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <androidx.core.widget.NestedScrollView
        android:layout_below="@+id/toolbar_hom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:id="@+id/thoughtoftheday"
                app:cardCornerRadius="4dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/thought_layout"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="“I slept and I dreamed that life is all joy. I woke and I saw that life is all service. I served and I saw that service is joy.”"/>
                    <TextView
                        android:textColor="@color/colorPrimary"
                        android:layout_margin="2dp"
                        android:gravity="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="– Kahlil Gibran"
                        android:layout_gravity="left"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <FrameLayout
                android:layout_below="@+id/thoughtoftheday"
                android:id="@+id/notic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:textColor="#ffffff"
                            android:id="@+id/notice"
                            android:ellipsize="marquee"
                            android:textSize="10dp"
                            android:singleLine="true"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:scrollHorizontally="true"
                            android:layout_gravity="start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BUS ROUTE / TIME - EVEN SEMESTER EXAM 2018 - 19 (UCER) FOR BBS PHAPHAMAU"/>



                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <ImageView
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:elevation="5dp"
                    android:layout_gravity="right|bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_remove_blue_eye_black_24dp"/>
            </FrameLayout>
            <ViewFlipper
                android:layout_below="@+id/notic"
                android:layout_margin="5dp"
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:flipInterval="3000"
                android:autoStart="true">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:scaleType="fitXY"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:src="@drawable/pica"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ff0000"
                        android:text="Infosys selected 452 students from united groups."
                        android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:scaleType="fitXY"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:src="@drawable/picc"/>
                    <TextView
                        android:textColor="#ff0000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TCS selected 20 students"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:scaleType="fitXY"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:src="@drawable/picd"/>
                    <TextView
                        android:textColor="#ff0000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MIND selected 10 students "
                        android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:scaleType="fitXY"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:src="@drawable/pice"/>
                    <TextView
                        android:textColor="#ff0000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Infosys selected 452 students from united groups."
                        android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:scaleType="fitXY"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:src="@drawable/picf"/>
                    <TextView
                        android:textColor="#ff0000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Infosys selected 452 students from united groups."
                        android:layout_gravity="center"/>
                </LinearLayout>
            </ViewFlipper>
            <LinearLayout
                android:layout_below="@+id/view"
                android:weightSum="3"
                android:orientation="horizontal"
                android:id="@+id/first1"
                android:layout_width="match_parent"
                android:layout_height="115dp">
<androidx.cardview.widget.CardView
    android:layout_weight="1"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardUseCompatPadding="false"
    app:cardElevation="4dp">

</androidx.cardview.widget.CardView>
<androidx.cardview.widget.CardView
    android:layout_weight="1"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardUseCompatPadding="false"
    app:cardElevation="4dp">

</androidx.cardview.widget.CardView>
<androidx.cardview.widget.CardView
    android:layout_weight="1"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardUseCompatPadding="false"
    app:cardElevation="4dp">

</androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/first1"
                android:weightSum="3"
                android:orientation="horizontal"
                android:id="@+id/first2"
                android:layout_width="match_parent"
                android:layout_height="115dp">
<androidx.cardview.widget.CardView
    android:layout_weight="1"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardUseCompatPadding="false"
    app:cardElevation="4dp">

</androidx.cardview.widget.CardView>
<androidx.cardview.widget.CardView
    android:layout_weight="1"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardUseCompatPadding="false"
    app:cardElevation="4dp">

</androidx.cardview.widget.CardView>
<androidx.cardview.widget.CardView
    android:layout_weight="1"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardUseCompatPadding="false"
    app:cardElevation="4dp">

</androidx.cardview.widget.CardView>
            </LinearLayout>
            <HorizontalScrollView
                android:layout_below="@+id/first2"
                android:layout_alignParentBottom="true"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                >
                <LinearLayout
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageButton
                            android:scaleType="fitXY"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/circle_profile"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="About UGI"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageButton
                            android:scaleType="fitXY"

                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/circle_profile"/>
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Our Institutions"/>
                    </LinearLayout>
                    <LinearLayout

                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageButton
                            android:id="@+id/about"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/circle_profile"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Courses"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageButton

                            android:scaleType="fitXY"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/circle_profile"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Admissions"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageButton

                            android:scaleType="fitXY"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/circle_profile"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Infra"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageButton

                            android:scaleType="fitXY"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/circle_profile"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Placements"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageButton
                            android:scaleType="fitXY"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/circle_profile"/>
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Life UGI"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageButton

                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/circle_profile"/>
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Downloads"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageButton

                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/circle_profile"/>
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contact Us"/>
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
    <include
        layout="@layout/notification_layout"
        android:visibility="gone"/>
</RelativeLayout>
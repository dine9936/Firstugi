<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <Button
        android:clickable="false"
        android:id="@+id/session_button"
        android:elevation="5dp"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:background="@drawable/quot_back"
        android:text="2018-2019"
        android:padding="5dp"
        android:layout_gravity="center|top"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="false"
        android:layout_marginTop="20dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp"
            android:orientation="vertical"
            >
            <TextView
                android:textColor="#0000ff"
                android:linksClickable="true"
                android:id="@+id/sessional_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="sessional one"
                android:padding="5dp"
                android:layout_margin="5dp"/>
            <TextView
                android:textColor="#0000ff"
                android:linksClickable="true"
                android:id="@+id/sessional_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="sessional two"
                android:padding="5dp"
                android:layout_margin="5dp"/>
            <TextView
                android:id="@+id/sessional_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="sessional three"
                android:textColor="#0000ff"
                android:linksClickable="true"
                android:padding="5dp"
                android:layout_margin="5dp"/>
            <TextView
                android:id="@+id/semester"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="semester"
                android:textColor="#0000ff"
                android:linksClickable="true"
                android:padding="5dp"
                android:layout_margin="5dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>
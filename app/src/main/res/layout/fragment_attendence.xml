<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Attendence">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/token"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attendence"
                android:textSize="20dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:textAlignment="textEnd"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today Attendence"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:gravity="end" />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(3/5)"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    />
            </LinearLayout>



        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@+id/token"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/recycler_attendence_today"
            />
        <LinearLayout
            android:layout_below="@+id/recycler_attendence_today"
            android:id="@+id/total_header"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:weightSum="2"
            android:orientation="horizontal">
            <TextView
                android:textAlignment="textEnd"
                android:layout_weight="1"
                android:layout_below="@+id/recycler_attendence_today"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total"
                android:id="@+id/total_text"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:gravity="end" />
            <TextView
                android:layout_weight="1"
                android:layout_below="@+id/recycler_attendence_today"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(20/35)"
                android:id="@+id/total_value"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>
        <LinearLayout
            android:weightSum="5"
            android:id="@+id/header_text"
            android:layout_below="@id/total_header"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <TextView
                android:textAlignment="center"
                android:layout_weight="1"
                android:id="@+id/sbjct_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subject"
                android:layout_gravity="center"
                android:textSize="15dp"
                />
            <TextView
                android:textAlignment="center"
                android:layout_weight="1"
                android:id="@+id/total_class"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total"
                android:layout_gravity="center"
                android:textSize="15dp"
                />
            <TextView
                android:textAlignment="center"

                android:layout_weight="1"
                android:id="@+id/total_prsnt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Present"
                android:layout_gravity="center"
                android:textSize="15dp"
                />
            <TextView
                android:textAlignment="center"

                android:layout_weight="1"
                android:id="@+id/total_absnt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Absent"
                android:layout_gravity="center"
                android:textSize="15dp"
                />
            <TextView
                android:textAlignment="center"

                android:layout_weight="1"
                android:id="@+id/prsnt_prcnt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Percent"
                android:layout_gravity="center"
                android:textSize="15dp"
                />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_attendence_total"
            android:layout_width="match_parent"
            android:layout_height="475dp"
            android:layout_below="@+id/header_text"
            android:layout_marginTop="2dp" />
    </LinearLayout>

</androidx.core.widget.NestedScrollView>
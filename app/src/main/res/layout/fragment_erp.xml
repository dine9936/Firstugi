<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".erp">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:id="@+id/appbar"
        android:background="#ffffff"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways|snap"
            android:id="@+id/toolbar_erp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_gravity="center"
                    android:layout_width="40dp"
                    app:border_width="1dp"
                    android:id="@+id/toolbar_profilea"
                    app:border_color="@color/colorPrimary"
                    android:fitsSystemWindows="true"
                    android:layout_height="40dp"
                    android:src="@drawable/din"/>
                <LinearLayout
                    android:gravity="start|center"
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:textColor="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dinesh Kumar"
                        android:textStyle="bold"
                        android:gravity="start" />
                    <TextView
                        android:layout_marginLeft="2dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="21150986"
                        />
                </LinearLayout>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
        <com.google.android.material.tabs.TabLayout
            app:tabGravity="fill"
            android:minHeight="?attr/actionBarSize"
            app:tabMode="fixed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabTextColor="#000000"
            android:elevation="0dp"
            app:tabSelectedTextColor="@color/colorPrimary"
            android:id="@+id/tab_erp">
        </com.google.android.material.tabs.TabLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.viewpager.widget.ViewPager
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:layout_gravity="top"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/erp_pager"/>
            <include
                layout="@layout/profile_layout"
                android:visibility="gone"/>
    <include
        layout="@layout/notification_layout"
        android:visibility="gone"/>



</androidx.coordinatorlayout.widget.CoordinatorLayout>
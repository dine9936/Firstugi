<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".EventView">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_event"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Event"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
        app:navigationIcon="@drawable/ic_keyboard_backspace_black_24dp"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_below="@+id/toolbar_event">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Enigma"
        android:textSize="15dp"
        android:layout_margin="5dp"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/ucer"
        android:scaleType="fitXY"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You can start the correct Animation when the visibility of the LinearLayout changes by creating a new subclass of LinearLayout and overriding setVisibility() to start the Animations. Consider something like this:"
        android:padding="5dp"
        android:layout_margin="5dp"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView

        android:scaleType="fitXY"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/ucer"/>
    <ImageView
        android:scaleType="fitXY"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/din"/>
    <ImageView

        android:scaleType="fitXY"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@color/colorPrimary"/>
    <ImageView
        android:scaleType="fitXY"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/din"/>

</LinearLayout>
</LinearLayout>
</RelativeLayout>